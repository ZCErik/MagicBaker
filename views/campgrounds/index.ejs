<% include ../partials/header %>


<img class="mainPicture" src="https://i.imgur.com/rnKYDf1.jpg">
    <div class="container">
        <header class="jumbotron"> 
            <div class="container">
                <h1>The Magic Baker </h1>
                <p> Check out our products </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Product</a>
                </p>
            </div>
        </header>
    
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-md-4 col-sm-5">
                    <div class="img-thumbnail image">
                                <img class="mainPicture" src="<%=campground.image%>" >
                                <div class="caption">
                                    <h4> <%= campground.name %> </h4>
                                </div>
                                <p>
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                                </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include ../partials/footer %>