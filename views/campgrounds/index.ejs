<% include ../partials/header %>


<img class="mainPicture" src="https://i.imgur.com/rnKYDf1.jpg">
    <div class="container">
        <header class="jumbotron"> 
            <div class="container">
                <h1 class="text-center">Featured Product</h1>
                <p class="text-left">This is the product of the week! People are buying Brownies!</p>
                <img class="img-thumbnail rounded mx-auto d-block" src="https://i.imgur.com/vOeSb3B.jpg" height=150 width=150>
                <p class="text-center">
                    <a class="btn btn-success btn-lg" href="/campgrounds/new">Buy Now</a>
                </p>
            </div>
        </header>
    
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-md-4 col-sm-5">
                    <div class="img-thumbnail image">
                                <img class="mainPicture" src="<%=campground.image%>" >
                                <div class="caption">
                                    <h4> <%= campground.name %> </h4>
                                </div>
                                <p>
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                                </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include ../partials/footer %>