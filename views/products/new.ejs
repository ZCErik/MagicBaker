<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center;"> Create a new product </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/products" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="description" name="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary mb-2 btn-block">Submit!</button>
                    </div>
                </form>
                
                <a href="/products"> Go back </a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>