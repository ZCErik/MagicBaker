<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center;"> Edit <%= product.name %></h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.name %>" name="product[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" value="<%= product.price %>" name="product[price]" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.image %>" name="product[image]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= product.description %>" name="product[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary mb-2 btn-block">Submit!</button>
                    </div>
                </form>
                
                <a href="/products"> Go back </a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>